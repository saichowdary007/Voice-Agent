{
  "voice_recognition": {
    "description": "Voice recognition sensitivity settings - calibrated based on measured RMS values",
    "vad_settings": {
      "silence_threshold": 12,
      "speech_threshold": 3,
      "debounce_ms": 300,
      "hangover_frames": 15,
      "noise_floor": 50,
      "voice_threshold": 150,
      "strong_voice_threshold": 400,
      "webrtc_vad_mode": 2
    },
    "audio_processing": {
      "sample_rate": 16000,
      "chunk_size_ms": 500,
      "min_chunk_size_bytes": 640,
      "min_speech_buffer_ms": 700,
      "max_frame_bytes": 100000,
      "voice_frequency_range": {
        "min_hz": 300,
        "max_hz": 3400
      },
      "gain_boost": 2.0,
      "echo_cancellation": true,
      "noise_suppression": true,
      "auto_gain_control": false
    },
    "websocket_settings": {
      "heartbeat_interval_ms": 30000,
      "reconnect_interval_ms": 3000,
      "max_reconnect_attempts": 5,
      "connection_timeout_ms": 10000,
      "health_check_interval_ms": 60000,
      "max_missed_pongs": 3
    }
  },
  "tuning_guide": {
    "too_sensitive": {
      "description": "If voice recognition is triggering too often (false positives)",
      "adjustments": [
        "Increase silence_threshold (25 -> 35)",
        "Increase speech_threshold (5 -> 8)",
        "Increase debounce_ms (500 -> 1000)",
        "Increase voice_threshold_offset (15 -> 25)",
        "Increase min_chunk_size_bytes (640 -> 1280)"
      ]
    },
    "not_sensitive_enough": {
      "description": "If voice recognition is missing speech",
      "adjustments": [
        "Decrease silence_threshold (25 -> 15)",
        "Decrease speech_threshold (5 -> 3)",
        "Decrease voice_threshold_offset (15 -> 10)",
        "Increase gain_boost (2.5 -> 3.0)",
        "Decrease min_chunk_size_bytes (640 -> 320)"
      ]
    },
    "connection_issues": {
      "description": "If WebSocket connections are unstable",
      "adjustments": [
        "Increase heartbeat_interval_ms (30000 -> 45000)",
        "Increase reconnect_interval_ms (3000 -> 5000)",
        "Increase connection_timeout_ms (10000 -> 15000)",
        "Decrease chunk_size_ms (500 -> 300)"
      ]
    }
  }
}